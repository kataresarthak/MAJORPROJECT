<style>
  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.4rem 0.8rem;
    font-size: 0.85rem;
  }

  .search-btn:hover {
    background-color: #e03a44;
    color: white;
  }

  .search-input {
    border-radius: 25px;
    font-size: 0.85rem;
    padding: 0.4rem 1rem;
  }

  /* Make search shrink nicely */
  .search-form {
    flex: 1;
    max-width: 500px;
    margin: 0 1rem;
  }

  @media (max-width: 768px) {
    .search-input {
      font-size: 0.8rem;
    }

    .search-btn {
      font-size: 0.75rem;
      padding: 0.3rem 0.6rem;
    }
  }

  /* Toggle dropdown menu styling */
  .mobile-menu {
    background: white;
    padding: 0.5rem 1rem;
    border-radius: 10px;
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Logo -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>

    <!-- Search Bar (Always Visible) -->
    <form
      class="d-flex search-form"
      role="search"
      action="/listings/search"
      method="GET"
    >
      <input
        class="form-control me-2 search-input"
        type="search"
        name="q"
        placeholder="Search your listing"
      />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass me-1"></i>
      </button>
    </form>

    <!-- Toggle Button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#mobileMenu"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Right Menu -->
    <div class="collapse navbar-collapse justify-content-end" id="mobileMenu">
      <ul class="navbar-nav mobile-menu text-md-end">

        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Add New Listing</a>
        </li>

        <% if (!currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Log in</b></a>
          </li>
        <% } %>

        <% if (currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Log out</a>
          </li>
        <% } %>

      </ul>
    </div>

  </div>
</nav>
